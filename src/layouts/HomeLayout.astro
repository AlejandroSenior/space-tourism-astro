---
import DefaultLayout from '@/layouts/DefaultLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<DefaultLayout title={`${title}`}>
  <main class="grid grid-cols-1 place-content-end px-5 lg:grid-cols-2 lg:place-content-center">
    <slot />
  </main>
</DefaultLayout>

<style>
  html {
    background-size: cover;
    background-image: url('/img/home-mobile-background.avif');
    background-position: center;
    height: 100vh;
  }

  main {
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (width >= 768px) {
    html {
      background-image: url('/img/home-desktop-background.avif');
    }

    main {
      height: 100vh;
    }
  }
</style>
